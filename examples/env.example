# Azure OpenAI Configuration
# Copy this file to .env and fill in your actual values

# Required Azure OpenAI settings
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_MODEL_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Optional settings
AZURE_OPENAI_MAX_TOKENS=2000
AZURE_OPENAI_TEMPERATURE=0.7

# Framework settings
DEBUG_MODE=false
LOG_LEVEL=INFO
FRAMEWORK_MAX_CONCURRENT_TASKS=10

# Database settings (optional)
DATABASE_URL=sqlite:///workflown.db
DATABASE_POOL_SIZE=5

# Storage settings (optional)
STORAGE_BACKEND=filesystem
STORAGE_PATH=./data

# API settings (optional)
API_HOST=localhost
API_PORT=8000

# Security settings (optional)
SECURITY_SECRET_KEY=your_secret_key_here
SECURITY_TOKEN_EXPIRY=3600

# Logging settings (optional)
LOGGING_LEVEL=INFO
LOGGING_ENABLE_CONSOLE=true
LOGGING_ENABLE_FILE=true
LOGGING_ENABLE_STRUCTURED=true
LOGGING_FILE_PATH=./logs/workflown.log
LOGGING_STRUCTURED_FILE_PATH=./logs/workflown-structured.log
LOGGING_MAX_FILE_SIZE=10485760
LOGGING_BACKUP_COUNT=5
LOGGING_INCLUDE_LOCATION=true
LOGGING_INCLUDE_CONTEXT=true
LOGGING_COLORED_CONSOLE=true
LOGGING_CORRELATION_ID_HEADER=X-Correlation-ID 